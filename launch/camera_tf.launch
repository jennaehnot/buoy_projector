<?xml version="1.0"?>
<launch>
   <arg name="calibration_path_url" default="file://$(find opencv_dnn)/config/calibration.yaml"/>
   <arg name="camera_name" default="camera"/>
   <arg name="from_tf" default="rgb_cam"/>
   <arg name="to_tf" default="ship_ref_point"/>
   <arg name="cartPlot_confidence" default="50"/>
   
    <group ns="lever_arms">  
        <node pkg="tf2_ros" type="static_transform_publisher" name="ship_ref_point" args="0 0 0 0 0 0 1 world ship_ref_point" output="screen" required="true"/>
        <node pkg="tf2_ros" type="static_transform_publisher" name="rgb_cam" args=".34 -.015 2.089 0 0 0 ship_ref_point rgb_cam" output="screen" required="true"/>
    </group>

    <node pkg="buoy_projector" type="cam_info" name="buoy_projector" output="screen">
        <param name="calibration_path" value="$(arg calibration_path_url)"/>
        <param name="camera_name" value="$(arg camera_name)"/>
    </node>

    <node pkg="buoy_projector" type="projector.py" name="projector" output="screen">
        <param name="from_tf" value="$(arg from_tf)"/>
        <param name="to_tf" value="$(arg to_tf)"/>
        <param name="cartPlot_confidence" value="$(arg cartPlot_confidence)"/>
    </node>
</launch>